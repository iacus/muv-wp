{% extends "base.twig" %}

{% block content %}
  <header class="page-header header--default">
    <div class="container">
      <div class="row">

        {# Title #}
        <div class="header-title mb-4 col-md-6">
          {% if post.fullTitle %}
            <h1 class="display-03">{{post.fullTitle}}</h1>
          {% else %}
            <h1 class="display-03">{{post.title}}</h1>
          {% endif %}
        </div>

        {# Description #}
        {% if post.description %}
          <div class="header-description mb-3 col-md-6">
            <h2 class="display-05 bold">{{post.description}}</h2>
          </div>
        {% endif %}

      </div>
    </div>
  </header>

  <section>
    <div class="container mb-5 ">
      <div class="row py-5">


        <div class="col-12">
          <div class="container px-0">
            <div class="row no-gutters">
              {% for post in support %}
                {% include ['tease-support.twig', 'tease.twig'] %}
              {% endfor %}
            </div>
          </div>


        </div>

      </div>
    </div>
  </section>

  {# Flexible #}
  {% include "partials/flexible.twig" %}


{% endblock %}
