{% extends "base.twig" %}

{% block content %}
  <header class="page-header page-header--b page-header--ml">

    <div class="header-title reveal-soft">
      {% if post.fullTitle %}
        <h1 class="display-03">{{post.fullTitle}}</h1>
      {% else %}
        <h1 class="display-03">{{post.title}}</h1>
      {% endif %}
    </div>

    <div class="header-description reveal-soft">
      <div class="header-description-inner">
        {{post.description}}
      </div>
    </div>

    {% if post.thumbnail %}
      <div class="header-image">
        <img loading="lazy" src="{{Image(post.thumbnail).src('small')}}" srcset="{{ Image(post.thumbnail).srcset }}" sizes="{{ Image(post.thumbnail).img_sizes }}" alt="{{Image(post.thumbnail).alt}}" />
      </div>
    {% endif %}


  </header>

  {% include "partials/flexible.twig" %}

{% endblock %}
