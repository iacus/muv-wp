<div class="card col-sm-6 col-md-4 {{post.meta('bgColor').value}} tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
	{% if post.thumbnail %}
		{% if post.meta('pressnote') %}
			<a href="{{post.meta('pressnote').url}}" target="_blank">
				<div class="card-img-wrapper">
					<img class="card-img" loading="lazy" src="{{ Image(post.thumbnail).src('small') }}" srcset="{{ Image(post.thumbnail).srcset }}" sizes="{{ Image(post.thumbnail).img_sizes }}" alt="{{Image(post.thumbnail).alt}}" />
				</div>
			</a>
		{% else %}
			<a target="_blank">
				<div class="card-img-wrapper">
					<img class="card-img" loading="lazy" src="{{ Image(post.thumbnail).src('small') }}" srcset="{{ Image(post.thumbnail).srcset }}" sizes="{{ Image(post.thumbnail).img_sizes }}" alt="{{Image(post.thumbnail).alt}}" />
				</div>
			</a>
		{% endif %}
		{# <a href="{{post.link}}"><img class="card-img" loading="lazy" src="{{ Image(post.thumbnail).src('small') }}" srcset="{{ Image(post.thumbnail).srcset }}" sizes="{{ Image(post.thumbnail).img_sizes }}" alt="{{Image(post.thumbnail).alt}}" /></a> #}
	{% endif %}
	<div class="card-body">
		<p class="text-cat mb-1"> {{post.post_date|date("j F Y")}}</p>

		{% if post.thumbnail %}
		<h3 class="card-title text-02 bold">{{post.title}}</h3>
		{% else %}
		<h3 class="card-title display-05 bold">{{post.title}}</h3>
		{% endif %}

		{% if post.meta('pressnote') %}
			<div class="bottom">
				<a class="card-link text-link stretched-link" href="{{post.meta('pressnote').url}}" target="_blank">{{post.meta('pressnote').title}}</a>
			</div>
		{% endif %}

	</div>
	{% endblock %}
</div>
